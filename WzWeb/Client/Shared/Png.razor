@using WzWeb.Shared;
@inject HttpClient Http

@if (png == null)
{
    <Loading></Loading>
}
else
{
    <img src="data:image/png;base64,@png.Base64Data" class="card-img" alt="..." style="width:@(png.Width+"px");height:@(png.Height+"px")" />
}


@code {

    [Parameter]
    public Node CurrentNode { get; set; }

    private PngInfo png;

    protected override async Task OnInitializedAsync()
    {
        var resp = await Http.PostAsJsonAsync<Node>("Maple/GetPng", CurrentNode);
        png = await resp.Content.ReadFromJsonAsync<PngInfo>();
    }

}
