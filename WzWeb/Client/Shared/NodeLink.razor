@using WzWeb.Shared;
@inject NavigationManager NavigationManager
<a href="javascript:void(0)" @onclick="NavigateToNode">@CurrentNode.Text</a>

@code {
    [Parameter]
    public Node CurrentNode { get; set; }

    private void NavigateToNode()
    {
        NavigationManager.NavigateTo($"wz?path={CurrentNode.FullPathToFile}", true);
    }

}
